{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["tsconfig/tsconfig.library.json"],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", ".storybook/**/*", "*.stories.tsx", "vite.config.ts"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
